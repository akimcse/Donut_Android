<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/main_coral"/>
            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="2dp"
                android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/gray_200"/>
            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="2dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>